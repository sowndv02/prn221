@model SEP_Management.Areas.SubjectManager.Pages.Assignments.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].AssignName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].AssignDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Part)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].DueDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Assignment[0].Subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Assignment) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssignName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AssignDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Part)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DueDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subject.SubjectId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AssignId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AssignId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AssignId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
