                                                                                        {
                                                                                            <option value="@item.ProjectId">item.ProjectCode</option>
                                                                                        }
                                                                                    </select>
                                                                                </div>
                                                                                <div class="row mt-5 mb-2 mx-2 ">
                                                                                    <input type="hidden" name="class_id" value="@value.ClassId"></input>
