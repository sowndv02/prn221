@page
@model SEP_Management.Areas.Admin.Pages.Systems.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].SettingGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].SettingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].DisplayOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].CreatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].UpdatedBy)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SystemSetting[0].UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.SystemSetting) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SettingGroup)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SettingName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayOrder)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedBy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SettingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SettingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SettingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
