                                <div class="col">
                                    <label for="Setting_Group" class="form-label">Setting Group:</label>
                                    <select asp-for="Role.Group" asp-items="ViewBag.settingGroupValues" class="form-select"></select>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col">
                                    <label for="Setting_Name" class="form-label">Setting Name:</label>
