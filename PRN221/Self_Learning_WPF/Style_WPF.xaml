        <Grid>
            <Button Content="Sondv" Width="100" HorizontalAlignment="Right"></Button>
            <Button Content="Sondv" Width="100" HorizontalAlignment="Left"></Button>
            <TextBox Width="100"></TextBox>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width"  Value="650"></Setter>
                    <Setter Property="Background" Value="Aqua"></Setter>
                </Style>

                <Style TargetType="TextBox">
                    <Setter Property="Width"  Value="650"></Setter>
                    <Setter Property="Background" Value="Aqua"></Setter>
                </Style>
            </Grid.Resources>
        </Grid>
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Button" x:Key="btnStyleYellow">
                    <Setter Property="Width"  Value="650"></Setter>
                    <Setter Property="Background" Value="Yellow"></Setter>
                </Style>

                <Style TargetType="Button" x:Key="btnStyleOrange">
                    <Setter Property="Width"  Value="650"></Setter>
                    <Setter Property="Background" Value="Orange"></Setter>
                </Style>
            </StackPanel.Resources>
            <Button Style="{StaticResource btnStyleYellow}" Content="Sondv" Width="100" HorizontalAlignment="Right"></Button>
            <Button Style="{StaticResource btnStyleOrange}" Content="Sondv" Width="100" HorizontalAlignment="Right"></Button>
        </StackPanel>
        <StackPanel>
            <Button Content="ALl resouce"></Button>
        </StackPanel>
        <StackPanel>
            <Button Content="Yes" Style="{StaticResource ResourceKey=StyleResourceFile}"></Button>
        </StackPanel>
