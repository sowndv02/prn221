<Window x:Class="Binding_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binding_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox Name="tbSource" VerticalAlignment="Top"></TextBox>
        <!--<TextBox Name="tbBinding" VerticalAlignment="Center" Text="{Binding Path=Text, ElementName=tbSource}"></TextBox>-->
        <TextBox Name="tbBinding" VerticalAlignment="Center" Text="{Binding Path=Text, ElementName=tbSource}"></TextBox>
        <Button Name="btnBinding" VerticalAlignment="Bottom" Content="{Binding BtnName}" ></Button>
    </Grid>
</Window>
